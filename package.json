{
  "name": "iobroker.radiohead",
  "version": "1.3.0",
  "description": "This is an ioBroker-Adapter to integrate a RadioHead network using a serial interface.",
  "author": {
    "name": "Peter MÃ¼ller",
    "email": "peter@crycode.de",
    "url": "https://crycode.de"
  },
  "homepage": "https://github.com/crycode-de/ioBroker.radiohead",
  "license": "GPL-2.0-only",
  "keywords": [
    "ioBroker",
    "radiohead",
    "serial",
    "wireless"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/crycode-de/ioBroker.radiohead"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2",
    "core-decorators": "^0.20.0",
    "radiohead-serial": "^6.0.1"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^5.0.0",
    "@alcalzone/release-script-plugin-iobroker": "^4.0.0",
    "@alcalzone/release-script-plugin-license": "^4.0.0",
    "@alcalzone/release-script-plugin-manual-review": "^4.0.0",
    "@crycode/eslint-config": "^2.2.1",
    "@iobroker/adapter-dev": "^1.5.0",
    "@iobroker/testing": "^5.1.1",
    "@types/node": "^24.9.2",
    "@types/proxyquire": "^1.3.31",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^6.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src|.watch)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src|.watch)/**}/*.{html,css,png,svg,jpg,js}",
    "admin/build/",
    "build/",
    "io-package.json",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rimraf build admin/build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit --project ./tsconfig.json",
    "lint": "eslint .",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/crycode-de/ioBroker.radiohead/issues"
  },
  "readmeFilename": "README.md"
}
